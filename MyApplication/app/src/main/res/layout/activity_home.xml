                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/Board_Plus_Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="게시판 글 작성하기" />

                <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                    android:id="@+id/srl_Mainpage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/Board_LinearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                        </LinearLayout>
                    </ScrollView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_main"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </androidx.recyclerview.widget.RecyclerView>

                </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/tabCalendar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="달력 페이지"
                    android:textSize="30dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tabAlbum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="추억 돌아보기"
                    android:layout_margin="20dp"
                    android:textSize="27dp"
                    android:textStyle="bold"></TextView>

                <androidx.cardview.widget.CardView
                    android:layout_margin="5dp"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:src="@drawable/sky"
                        android:id="@+id/todoImageView"
                        android:background="@drawable/roundback"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_margin="10dp"
                        android:id="@+id/info_text"
                        android:text="2018년"
                        android:textColor="#d3d3d3"
                        android:textStyle="bold|italic"
                        android:textSize="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_margin="5dp"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:src="@drawable/catmeow"
                        android:id="@+id/imageView1"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_margin="10dp"
                        android:text="2019년"
                        android:textColor="#d3d3d3"
                        android:textStyle="bold|italic"
                        android:textSize="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_margin="5dp"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:src="@drawable/nightsky"
                        android:id="@+id/imageView2"
                        android:background="@drawable/roundback"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_margin="10dp"
                        android:text="2020년"
                        android:textColor="#d3d3d3"
                        android:textStyle="bold|italic"
                        android:textSize="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </FrameLayout>
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </TabWidget>

    </LinearLayout>

</TabHost>