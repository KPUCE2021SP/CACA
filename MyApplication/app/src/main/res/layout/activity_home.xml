                                android:id="@+id/btn_add"
                                android:text="@string/Btn_Add"
                                android:layout_width="150dp"
                                android:layout_marginRight="5dp"
                                android:layout_height="50dp"/>

                            <Button
                                android:drawableStart="@drawable/ic_left_remove"
