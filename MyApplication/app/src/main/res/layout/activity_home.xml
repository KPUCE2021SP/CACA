                            android:layout_height="412dp"
                            android:foreground="@drawable/normaleye">

                            <FrameLayout
                                android:id="@+id/deco"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:foreground="@drawable/glass">

                                <FrameLayout
                                    android:id="@+id/body"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:foreground="@drawable/standing_2">

                                </FrameLayout>
                            </FrameLayout>
                        </FrameLayout>

                        <Button
                            android:id="@+id/btn_familycustom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_margin="5dp"
                            android:text="가족 커스텀 만들러 가기" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

